

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<html>
<head>
  <meta http-equiv="Content-Language" content="en-us">
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Travel Midwest - Camera Snapshot</title>
  <link rel="stylesheet" type="text/css" href="lmiga.css?vers=4">
  <script type="text/javascript" src="jquery-3.4.1.min.js"></script>
  <script type="text/javascript" src="jquery-ui.min.js?vers=1.12"></script> <!-- For doubletaptogo.js responsive menu handling -->
  <script type="text/javascript" src="polyfills.js?vers=1"></script>
  <script type='text/javascript'>
    // the user selected a new direction for a Lake County camera
    function changeDirection(id, direction, url) {
      var img = document.getElementById("snapshot");
      if (url.startsWith("http")) {
        img.src = decodeURIComponent(url);
      }
      else {
    	  img.src = "snapshot?id=" + id + "&direction=" + direction;
      }
      var dirRow = document.getElementById("Dirs");
      for (var cellIx = 0; cellIx < dirRow.cells.length - 1; cellIx++) {
        var dirCell = dirRow.cells[cellIx];
        dirCell.className = (dirCell.id == direction
          ? "delcanCameraDirTabSelected" : "delcanCameraDirTabUnselected");
      }
    }
    
    $("document").ready(SHOW_CAMERA);
    function SHOW_CAMERA() {
      var adjustingWindow = false;
      var aspect;
      
      function adjustWindowAfterSnapshotIsLoaded() {
        adjustingWindow = true;
        aspect = $("#snapshot").width() / $("#snapshot").height();
        var contentWidth = $("#snapshot").outerWidth() + 50;
        var contentHeight = $("#wrapper").outerHeight() + 120;
        if (contentWidth < screen.width) {
          window.resizeTo(contentWidth, contentHeight);
        }
        else {
          $("#snapshot").outerWidth(screen.width - 20);
        }
        adjustingWindow = false;
      }

      function adjustSnapshotAfterWindowIsResized() {
        if (!adjustingWindow) {
          var newWidth = Math.min($(window).width(), $(window).height() * aspect);
          $("#snapshot").outerWidth(newWidth - 36);
        }
      }
      
      $("#snapshot").on("load", adjustWindowAfterSnapshotIsLoaded);
      $(window).on("resize", adjustSnapshotAfterWindowIsResized);
      
      $("#refresh").on("click", function() {
        location.reload(true);
      });
    }
  </script>
</head>
<body>
<div id="wrapper" align="center">




  <h1>Real-time Camera Snapshot</h1>
  <h2>I-57/I-70 at Keller Drive (#7004)</h2>
  <p>The image you are requesting was received by the Gateway approximately
  30 minutes, 11 seconds ago.</p>
  <p>Click the camera icon below if you want to view it anyway:</p>
  <a href='showCamera.jsp?id=IL-IDOTD4-camera_704&direction=E&showOld=true'><img src='images/camera.png'></a>
  <p>Click the button below if you do not:</p>
  <input type='button' value='Close' onClick='window.close()'>




</div>

